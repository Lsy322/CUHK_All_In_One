<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/courseCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#8A32BD"
        app:cardCornerRadius="15dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/courseIdView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Abbrev"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/courseNameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Course Fullname"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/courseRatingText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3.0"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="15dp"></TextView>
                <RatingBar
                    android:id="@+id/courseRatingView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rating="3"
                    android:progressTint="#FFFF00"
                    android:secondaryProgressTint="#FFFF00"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>